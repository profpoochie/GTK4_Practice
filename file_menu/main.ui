<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <object class="GtkApplicationWindow" id="window_main">
    <property name="default-width">640</property>
    <property name="default-height">480</property>
    <property name="title">GTK4 Menu Example</property>
    <child>
      <object class="GtkBox">
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkMenuBar" id="menubar_main">
            <child>
              <object class="GioMenu" id="menu_file">
                <property name="name">appmenu</property>
                <child>
                  <object class="GtkMenuItem" id="menuitem_quit">
                    <property name="label">Quit</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
